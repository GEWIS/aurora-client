{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "client"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "lint": "eslint . --max-warnings=1",
    "lint-fix": "eslint . --fix",
    "format": "prettier --ignore-path .gitignore --check .",
    "format-fix": "prettier --ignore-path .gitignore --write .",
    "generate": "yarn workspaces run generate"
  },
  "devDependencies": {
    "@gewis/eslint-config-react": "^2.3.0",
    "@gewis/eslint-config-typescript": "^2.3.0",
    "@gewis/prettier-config": "^2.2.2",
    "@types/node": "^22.13.11",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.5.1"
}
